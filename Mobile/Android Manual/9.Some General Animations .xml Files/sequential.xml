<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <translate
        android:fromYDelta="-100%p"
        android:toYDelta="0%p"
        android:duration="1000"/>
    <rotate
        android:startOffset="1000"
        android:fromDegrees="0"
        android:duration="1000"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="360"
        android:repeatMode="restart"
        android:repeatCount="3"/>
    <!-- like do while the count is = 1st time + repeat count = 1 + 3 = 4 times
         total time till here = 1000 from 1st command + (4 + 3) * 1000 from 2nd command = 8000
         in 2nd command the command restart is also applicable on the startOffset command so each time this command
         is also being compiled so the 4 is for the number of repeat times and the 3 is for the number of ideal times
         so we get -> (4 + 3) * 1000 -->

    <!-- the 100 addition to time below  is just to get some ideal time for organization's sake -->
    <translate
        android:startOffset="8100"
        android:fromYDelta="0%p"
        android:toYDelta="100%p"
        android:duration="1000"/>

    <!-- when you use the command 'startOffset', take notice to the 'repeatCount' command -->


</set>